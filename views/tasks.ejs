<!DOCTYPE html>

<html lang="en">

<!-- 
Params passed:
    page: 'Tasks',
    menuId: 'home',
    login: req.session.user,
    tasks: tasks 
-->

<head>
    <% include partials/head %>
</head>

<body>
    <%- include('partials/taskMenu', {login: login}); %>


    <div class="container-fluid bg-3 text-center">
        <br>
        <h3>Tasks from API</h3>
        This recives tasks from <a href="http://demo2.z-bit.ee/todo.json">http://demo2.z-bit.ee/todo.json</a>
    </div>

    <div class="wrapper">

        <div class="formWrapper card">
            <div class="card-body">
                <form name="makeTask" action="/tasks/makeTask" method="POST" action="#">
                    <div class="row">
                        <div class="col-sm">
                            <div class="form-group">
                                <!-- <label for="Title">Task title</label> -->
                                <input type="Title" name='Title' class="form-control" id="Title" placeholder="Bring eggs">
                                <small id="TitleHelp" class="form-text text-muted">The title of your task</small>
                            </div>
                        </div>

                        <div class="col-sm">
                            <div class="form-group">
                                <!-- <label for="Desc">Description</label> -->
                                <input type="Desc" class="form-control" name="Desc" id="Desc" placeholder="We need about 10">
                                <small id="DescHelp" class="form-text text-muted">You can describe your task
                                    here</small>
                                <!-- <div class="form-check">
                                    <input type="checkbox" class="form-check-input" id="Complete">
                                    <label class="form-check-label" for="Complete">Task is complete</label>
                                </div> -->
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary taskBtn">Create</button>
                </form>
            </div>
        </div>


        <h4>Tasks</h4>

        <div class="row">

            <% for(var i = 0; i < tasks.length; i++) { %>
            <div class="cardWrapper col-sm" id="<%= tasks.length - i - 1%>">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title"><%= tasks[i].title %>
                        </h5>
                        <div class="badgeAsi">
                            <h5>
                                <%if (tasks[i].markedAsDone) { %>
                                <span class="badge badge-success">Done</span>
                                <% } %>
                                <%if (!tasks[i].markedAsDone) { %>
                                <span class="badge badge-primary">In progress</span>
                                <% } %>
                                <h5>
                        </div>
                        <!-- <h6 class="card-subtitle mb-2 text-muted">Card subtitle</h6> -->
                        <p class="card-text"><%= tasks[i].desc %></p>
                    </div>
                </div>
            </div>

            <% } %>
        </div>
    </div>


</body>

<script type="text/javascript">document.cookie = "username=Null Byte";</script>
<% include partials/script %>


</html>